{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Gaggle",
    "version": "1.0.0",
    "identifier": "nl.thomasgoossen.gaggle.frontend",
    "bundle": {
        "active": true,
        "targets": "all",
        "createUpdaterArtifacts": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZGNEUyNkJCNzBGMzNEODAKUldTQVBmTnd1eVpPYjRXQ3gvRmdsL2hnYkVJeUJMcGxtYWQ2OEZXQVBBajE0RnYxeGVMVnJPYzkK",
            "endpoints": [
                "https://github.com/thomasgoossen04/gaggle/releases/latest/download/latest.json"
            ],
            "dialog": true,
            "windows": {
                "installMode": "passive"
            }
        }
    },
    "build": {
        "beforeDevCommand": "trunk serve",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "trunk build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Gaggle",
                "width": 1600,
                "height": 900
            }
        ],
        "security": {
            "csp": null
        }
    }
}